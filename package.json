{
  "name": "quorum-client",
  "version": "0.1.0",
  "description": "Headless E2EE client for Quorum messenger (Quilibrium)",
  "type": "module",
  "main": "src/client.mjs",
  "bin": {
    "quorum": "./cli.mjs"
  },
  "scripts": {
    "test": "node test/integration.mjs",
    "test:verbose": "node test/integration.mjs --verbose",
    "test:keep": "node test/integration.mjs --keep",
    "test:spaces": "node test/spaces.mjs",
    "test:spaces:verbose": "node test/spaces.mjs --verbose",
    "test:spaces:keep": "node test/spaces.mjs --keep",
    "test:all": "node test/integration.mjs && node test/spaces.mjs"
  },
  "keywords": [
    "quilibrium",
    "quorum",
    "e2ee",
    "messenger",
    "headless"
  ],
  "author": "claudespiral",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "keytar": "^7.9.0",
    "ws": "^8.19.0"
  }
}
